<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aclimgDetailsImg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".imagesDetail.DetailImagesFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/details_layout_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="false">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_img1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@color/teal_700" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/layout_forma_front_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/details_layout_img1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img1"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/txt_front_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Front Male" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/details_layout_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_auto_start="false">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_img2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@color/teal_700" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/layout_forma_front_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/details_layout_img2"
        app:layout_constraintStart_toStartOf="@+id/details_layout_img2"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img2"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/txt_front_female"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Front Female" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/details_layout_img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="60dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img1"
        app:shimmer_auto_start="false">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_img3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@color/teal_700" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/layout_forma_back_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/details_layout_img3"
        app:layout_constraintStart_toStartOf="@+id/details_layout_img3"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img3"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/txt_back_default"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Back Male" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/details_layout_img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="60dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img2"
        app:shimmer_auto_start="false">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/detail_img4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:background="@color/teal_700" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/layout_forma_back_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@+id/details_layout_img4"
        app:layout_constraintStart_toStartOf="@+id/details_layout_img4"
        app:layout_constraintTop_toBottomOf="@id/details_layout_img4"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/txt_back_female"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Back Male" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/purple_500"
        app:srcCompat="@drawable/ic_baseline_home_48" />


</androidx.constraintlayout.widget.ConstraintLayout>