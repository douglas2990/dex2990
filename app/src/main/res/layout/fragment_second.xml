<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/adclSecondFragment"
    tools:context=".SecondFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPokemon"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/details_shimmer_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:shimmer_auto_start="false">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/detail_pokemon"
                android:layout_width="220dp"
                android:layout_height="220dp"
                tools:background="@drawable/ic_launcher_foreground" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/detais_shimmer_namePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="230dp"
            app:shimmer_auto_start="false">

            <TextView
                android:id="@+id/detail_namePokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/stronger_black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="PIKACHU" />

        </com.facebook.shimmer.ShimmerFrameLayout>


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/detais_shimmer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="275dp"
            app:shimmer_auto_start="false">

            <Button
                android:id="@+id/type_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/detail_shimmer_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="275dp"
            app:shimmer_auto_start="false">

            <Button
                android:id="@+id/type_pokemon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/detais_shimmer_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_gravity="end"
            android:layout_marginTop="275dp"
            app:shimmer_auto_start="false">

            <Button
                android:id="@+id/type_pokemon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/cardViewPokemon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_state_evolution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stage_evolulion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_click_moves"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewPokemon" />

    <Button
        android:id="@+id/button_click_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moves"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_state_evolution"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewPokemon" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/detais_teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/teste_pokemon_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="TESTE" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/detais_varieties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adView"
        app:shimmer_auto_start="false">

        <TextView
            android:id="@+id/txtEntrarVarieties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="TESTE" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!--
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detais_varieties" />
        -->

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-9539951481565522~1099798792"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_state_evolution" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/purple_500"
        app:srcCompat="@drawable/ic_baseline_home_48" />
</androidx.constraintlayout.widget.ConstraintLayout>


